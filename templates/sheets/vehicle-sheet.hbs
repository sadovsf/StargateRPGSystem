<form class="{{cssClass}} flexcol sgrpg itemsheet" autocomplete="off">
    {{!-- Sheet Header --}}
    <header class="sheet-header">
        {{!-- Header stuff goes here --}}
        <div class="flexcol image-col">
            <img class="profile-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}" height="70" width="70"/>
        </div>
        <div class="header-fields">
            <h1 class="charname flexrow">
                <input name="name" type="text" value="{{actor.name}}" placeholder="Name"/>
            </h1>
            <div class="resources grid grid-4col">
                <div class="resource flex-group-center">
                    <label for="data.handling" class="resource-label">Tech level</label>
                    <div class="resource-content flexrow flex-center flex-between">
                        <input type="text" name="data.techLevel" value="{{data.techLevel}}" data-dtype="Number"/>
                    </div>
                </div>
                <div class="resource flex-group-center">
                    <label for="data.health.value" class="resource-label">HP</label>
                    <div class="resource-content flexrow flex-center flex-between">
                        <input type="text" name="data.health.value" value="{{data.health.value}}" data-dtype="Number"/>
                        <label>/</label>
                        <input type="text" name="data.health.max" value="{{data.health.max}}" data-dtype="Number"/>
                    </div>
                </div>
                <div class="resource flex-group-center">
                    <label for="data.ac" class="resource-label">Armor class</label>
                    <div class="resource-content flexrow flex-center flex-between">
                        <input type="text" name="data.ac" value="{{data.ac}}" data-dtype="Number"/>
                    </div>
                </div>
                <div class="resource flex-group-center">
                    <label for="data.handling" class="resource-label">Handling</label>
                    <div class="resource-content flexrow flex-center flex-between">
                        <input type="text" name="data.handling" value="{{data.handling}}" data-dtype="Number"/>
                    </div>
                </div>
            </div>
        </div>
    </header>

    {{!-- Sheet Tab Navigation --}}
    <nav class="sheet-tabs tabs" data-group="primary">
        <a class="item active" data-tab="description">Description</a>
        <a class="item" data-tab="details">Details</a>
    </nav>
    {{> "systems/sgrpg/templates/sheets/parts/actor-bulk-progress.hbs"}}

    <section class="sg-sheet-body flexcol">
        <div class="tab flexcol description" data-tab="description">
            <div class="flexrow">
                {{editor content=data.description target="data.description" button=true owner=owner editable=editable rollData=rollData}}
            </div>
            <div class="attacks" style="flex: 1">
                {{> "systems/sgrpg/templates/sheets/parts/actor-weapon-inventory.hbs"}}
                <div style="flex: 1"></div>
            </div>
        </div>
        <div class="tab flexrow details" data-tab="details">
            {{> "systems/sgrpg/templates/sheets/parts/vehicle-details.hbs"}}
        </div>
    </section>
</form>