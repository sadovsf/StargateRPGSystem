
<table class="item-list inventory">
    <thead>
        <tr>
            <th class="bold">Disable Base Kit</th>
            <th><input type="checkbox" name="system.baseKitDisabled" data-dtype="Boolean" {{checked system.baseKitDisabled}} /></th>
        </tr>
        <tr>
            <th class="bold"><a class="txt-btn item-empty-inventory" data-type="equip">Clear Non-base Items <i class="fas fa-trash"></i></a></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each actor.basekit as |item|}}
        <tr class="inventory-item item" data-item-id="{{item._id}}">
            <td>
                <a class="item-control item-roll"><span class="item-image" style="background-image: url({{item.img}})"></span></a>
                <span>{{item.name}} {{#if item.system.isStack}} ({{item.system.quantity}}) {{/if}}</span>
            </td>
            <td>
                <a class="item-control item-consume" title="Consume"><i class="fas fa-cookie-bite"></i></a>
                <a class="item-control item-edit"><i class="fas fa-edit"></i></a>
                <a class="item-control item-delete"><i class="fas fa-trash"></i></a>
                <span>{{#if item.system.isLightItem}}{{#if item.system.lighted}}<i class="far fa-lightbulb"></i>{{/if}}{{/if}}</span>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>