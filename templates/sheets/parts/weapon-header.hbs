<div class="resources grid grid-3col">
    <div class="resource flex-group-center">
        <label for="system.toHit" class="resource-label">Tech level</label>
        <div class="resource-content flexrow flex-center flex-between">
            <input name="system.techLevel" type="text" value="{{system.techLevel}}" data-dtype="Number"/>
        </div>
    </div>
    <div class="resource flex-group-center">
        <label for="system.dmg" class="resource-label">Damage</label>
        <div class="resource-content flexrow flex-center flex-between">
            <input type="text" name="system.dmg" value="{{system.dmg}}" data-dtype="String"/>
        </div>
    </div>
    <div class="resource flex-group-center">
        <label for="system.toHitBonus" class="resource-label">To Hit Bonus</label>
        <div class="resource-content flexrow flex-center flex-between">
            <input type="text" name="system.toHitBonus" value="{{system.toHitBonus}}" data-dtype="Number"/>
        </div>
    </div>
</div>